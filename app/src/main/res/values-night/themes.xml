<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Logo." parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Primary brand color. -->
        <item name="android:actionBarStyle">@style/actionBar</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:popupMenuStyle">@style/Theme.MaterialComponents.Light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="actionBar" parent="@style/Theme.MaterialComponents.Light">
        <item name="android:icon">@drawable/ic_menu</item>
    </style>
</resources>